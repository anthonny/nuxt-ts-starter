{
  "name": "nuxt-ts-starter",
  "version": "1.0.0",
  "description": "We love using Nuxt & Typescript ðŸ’šðŸ’™",
  "author": "Chanlito <chanlito@outlook.com>",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "npm run build:client && npm run build:server",
    "build:client": "nuxt build",
    "build:server": "tsc -p server",
    "clean": "rimraf build",
    "dev": "cross-env NODE_ENV=development nodemon",
    "prestart": "npm run clean && npm run build",
    "start": "cross-env NODE_ENV=production node build/server"
  },
  "dependencies": {
    "@nuxtjs/axios": "^5.0.1",
    "@nuxtjs/dotenv": "^1.1.0",
    "compression": "^1.7.1",
    "cross-env": "^5.1.3",
    "dotenv": "^5.0.0",
    "express": "^4.16.2",
    "express-promise-router": "^3.0.1",
    "express-router-helper": "^1.0.1",
    "nuxt": "^1.3.0",
    "nuxtjs-extensions": "^1.5.0",
    "rimraf": "^2.6.2",
    "vee-validate": "^2.0.3",
    "vuetify": "^1.0.0"
  },
  "devDependencies": {
    "@types/compression": "0.0.35",
    "@types/express": "^4.11.1",
    "@types/node": "^9.4.4",
    "babel-eslint": "^8.2.1",
    "eslint": "^4.15.0",
    "eslint-friendly-formatter": "^3.0.0",
    "eslint-loader": "^1.7.1",
    "eslint-plugin-vue": "^4.0.0",
    "nodemon": "^1.14.12",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.7.0",
    "typescript": "^2.7.1"
  },
  "nodemonConfig": {
    "watch": [
      "server",
      "nuxt.config.js"
    ],
    "ext": "js ts",
    "ignore": [],
    "exec": "ts-node --type-check --project server server"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:vue/essential"
    ],
    "env": {
      "node": true,
      "browser": true
    },
    "parserOptions": {
      "parser": "babel-eslint",
      "ecmaVersion": 8
    },
    "rules": {
      "semi": [
        "error",
        "always"
      ],
      "no-console": "off",
      "vue/max-attributes-per-line": 0
    }
  },
  "prettier": {
    "bracketSpacing": true,
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none",
    "useTabs": false
  }
}
